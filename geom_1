#include <iostream>       //Задание 1
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	const int a=3;
	const int b=2;
	
	int array[a][b];
	for (int i = 0; i < a; i++) {
		for (int j = 0; j < b-1; j++) {
			cout << "Введите координату X: ";
			cin >> array[i][j];
			cout << "Введите координату Y: ";
			cin >> array[i][j+1];

		}
	}
			

	float s = 0.5 * (array[0][0] * (array[1][1] - array[2][1]) + array[1][0] * (array[2][1] - array[0][1]) + array[2][0] * (array[0][1] - array[1][1]));
	cout << "Площадь треугольника равна: "<<abs(s);
	return 0;
}
