#include <iostream>       //Задача 2
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	const int a = 4;
	const int b = 2;
	int p = 0;

	int array[a][b];
	for (int i = 0; i < a; i++) {
		for (int j = 0; j < b - 1; j++) {
			cout << "Введите координату X: ";
			cin >> array[i][j];
			cout << "Введите координату Y: ";
			cin >> array[i][j + 1];

		}
	}
	for (int i = 0; i < a-1; i++) {
		for (int j = 0; j < b-1; j++) {
			int r = sqrt((array[i + 1][j] - array[i][j])^2 + (array[i + 1][j + 1] - array[i][j + 1])^2);
			p += r;
		}
	}
	int r4 = sqrt((array[0][0] - array[3][0])^2 + (array[0][1] - array[3][1]) ^ 2);
	cout << "Периметр: " << p + r4;

	return 0;
}
