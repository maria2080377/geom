#include <iostream>        //Задача 3
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	const int a = 3;
	const int b = 2;
	int p = 0;
	float c1, c2;

	int array[a][b];
	for (int i = 0; i < a; i++) {
		for (int j = 0; j < b - 1; j++) {
			cout << "Введите координату X: ";
			cin >> array[i][j];
			cout << "Введите координату Y: ";
			cin >> array[i][j + 1];

		}
	}
	
	c1 = (array[0][0] + array[1][0] + array[2][0]) / 3.;
	c2 = (array[0][1] + array[1][1] + array[2][1]) / 3.;
	cout << "Центр масс по X: " << c1 << endl;
	cout << "Центр масс по Y: " << c2 << endl;

	return 0;
}
