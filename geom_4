#include <iostream>     //Задача 4
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	const int a = 4;
	const int b = 2;
	int p = 0;
	int c;

	int array[a][b];
	for (int i = 0; i < a; i++) {
		for (int j = 0; j < b - 1; j++) {
			cout << "Введите координату X: ";
			cin >> array[i][j];
			cout << "Введите координату Y: ";
			cin >> array[i][j + 1];

		}
	}

	c = sqrt((array[2][0] - array[0][0]) ^ 2 + (array[2][1] - array[0][1]) ^ 2);
	cout << "Диагональ прямоугольника: " << c;

	return 0;
}
